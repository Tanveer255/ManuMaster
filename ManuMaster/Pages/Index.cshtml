@page
@using Microsoft.AspNetCore.Mvc.Localization
@using ManuMaster.Localization
@inject IHtmlLocalizer<ManuMasterResource> L
@model ManuMaster.Pages.IndexModel

@section styles {
    <abp-style src="/Pages/Index.cshtml.css" />
}
@section scripts {
    @* <abp-script src="/Pages/Index.cshtml.js" /> *@
    <script src="e:\skilltest\manumaster\manumaster\pages\index.cshtml.js"></script>
}
<div class="container">
    <abp-card>
        <abp-card-header>
            <abp-card-title>
                @L["Welcome_Title"]
            </abp-card-title>
        </abp-card-header>
        <abp-card-body>            
            @L["Welcome_Text"]
        </abp-card-body>
    </abp-card>

    <div class="container">
        <abp-card>
            <abp-card-header>
                <abp-card-title>
                    TODO LIST
                </abp-card-title>
            </abp-card-header>
            <abp-card-body>
                <!-- FORM FOR NEW TODO ITEMS -->
                <form id="NewItemForm" class="row row-cols-lg-auto g-3 align-items-center">
                    <div class="col-12">
                        <div class="input-group">
                            <input id="NewItemText" type="text" class="form-control" placeholder="enter text...">
                            <input id="NewItemprice" type="text" class="form-control" placeholder="enter price...">
                            <input id="NewItemquantity" type="text" class="form-control" placeholder="enter quantity...">
                            <input id="NewItemmanufacture" type="datetime-local" class="form-control" placeholder="enter datetime...">
                        </div>
                    </div>
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
                <!-- TODO ITEMS LIST -->
                <ul id="ProductList">
                    @foreach (var todoItem in Model.ProductItems)
                    {
                        <li data-id="@todoItem.Id">
                            <i class="fa fa-trash-o"></i> @todoItem.Text
                            <i class="fa fa-trash-o"></i> @todoItem.Price
                            <i class="fa fa-trash-o"></i> @todoItem.Quantity
                            <i class="fa fa-trash-o"></i> @todoItem.Manufactured
                        </li>
                    }
                </ul>
            </abp-card-body>
        </abp-card>
    </div>
